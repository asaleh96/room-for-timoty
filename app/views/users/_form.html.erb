<div style="width: 60%; margin: 20px auto;">
<%= simple_form_for(@user) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :city %>
  <%= f.input :occupation %>
  <%= f.input :bio, label: 'Profile', as: :text, :input_html => { :cols => 5, :rows => 5 }, placeholder: 'Tell more about yourself..' %>
  <%= f.input :interests %>
  <%= f.input :photo %>

  <div style="text-align: center;">
  <%= f.submit class: "btn-flat" %>
  </div>
<% end %>
</div>
