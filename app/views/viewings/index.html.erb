  <h2 style="text-align: center; padding: 30px 0 30px 0;"> My Viewings </h2>
  <% @viewings.each do |viewing| %>
      <% if current_user == viewing.user %>
        <%= link_to flat_path(viewing.flat), class: "flat-link" do  %>

          <div class="notification">
              <div style="width: 20%; text-align: center;">
                <%= image_tag 'flat-placeholder.jpg', class: 'rounded-3', style: 'width: 150px;',  alt: "image placeholder for flat" %>
              </div>


              <div class="notification-content">

                  <p style="font-weight: bold;"> <small> <%= viewing.date.strftime("%A, %d %B %Y at %H:%M") %> </small></p>
                  <p> Your requested a viewing for <span style="font-weight:bold;"><%= viewing.flat.title %> </span> </p>
                  <p><%= viewing.flat.address %>, <%= viewing.flat.city %></p>
                  <br>



                  <% if viewing.status == "accepted" %>
                    <p style="font-weight: bold;"> 🥳 Your viewing request has been accepted. </p>
                  <% elsif viewing.status == "rejected" %>
                   <p style="font-weight: bold;"> 😪 Your viewing request has been rejected. <p>
                  <% else %>
                 <p style="font-weight: bold;">  ⏳ This viewing request is pending! <p>
                  <% end %>
                   <% end %>
        </div>
        <div style="width: 20%";>
          <%= link_to 'Edit',  edit_viewing_path(viewing), class: 'secondary-btn'%>
        </div>
        </div>

      <% end %>
    <% end %>
</div>

  <div style="text-align: center; padding: 20px;">
    <%= link_to 'Get back to flats', flats_path, class: 'secondary-btn' %>
  </div>

</div>
