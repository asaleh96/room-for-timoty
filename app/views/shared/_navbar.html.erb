<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'temporary-logo.png', alt: 'Application Logo', class: 'avatar' %>
      <span class="logo-title"> <%= "Rooms for Timoty"%></span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "My Viewings", viewings_path, class: "nav-link" %>
          </li>
           <li class="nav-item">
            <%= link_to "My Requests", requests_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Post an Ad", new_flat_path, class: "nav-link" %>
          </li>

          <li class='nav-item'>
           <div class="nav-item dropdown show">
              <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <% if current_user.photo.attached? %>
                  <%= cl_image_tag current_user.photo.key, class: 'avatar', gravity: "auto", radius: "max" %>
                <% else %>
                  <%= image_tag 'user-placeholder.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <% end %>
            </a>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
              <a class="dropdown-item" href="#"><%= link_to "My Profile", user_path(current_user), class: "nav-link" %></a>
              <a class="dropdown-item" href="#"><%= link_to "Edit Profile", edit_user_path(current_user), class: "nav-link" %></a>
              <a class="dropdown-item" href="#"><%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %></a>
            </div>
          </div>
          </li>

        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
